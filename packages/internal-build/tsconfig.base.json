{
  "compilerOptions": {
    // TODO Remove this when we drop support for Node 20
    "target": "es2022",
    "lib": ["es2023"],

    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true
  }
}
