{
  "name": "todone",
  "version": "0.8.0",
  "author": "Carlos Precioso <npm@precioso.design>",
  "license": "ISC",
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=22"
  },
  "bin": "bin.mjs",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "bin.mjs",
    "dist"
  ],
  "scripts": {
    "build": "parcel build",
    "dev": "parcel watch --no-hmr",
    "prepack": "$npm_execpath run build"
  },
  "dependencies": {
    "@todone/core": "workspace:^",
    "@todone/default-plugins": "workspace:^",
    "@todone/types": "workspace:^",
    "chalk": "^5.4.1",
    "clipanion": "^4.0.0-rc.4",
    "dotenv": "^16.5.0",
    "globby": "^14.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "parcel": "^2.15.1",
    "typescript": "~5.8.3"
  },
  "targets": {
    "main": {
      "source": "src/index.ts"
    },
    "bin": {
      "source": "src/bin.ts",
      "optimize": false,
      "isLibrary": true,
      "outputFormat": "esmodule",
      "distDir": "dist"
    }
  }
}
