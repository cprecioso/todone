{
  "name": "@todone/repo",
  "type": "module",
  "description": "todone monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cprecioso/todone.git"
  },
  "homepage": "https://github.com/cprecioso/todone#readme",
  "bugs": {
    "url": "https://github.com/cprecioso/todone/issues"
  },
  "author": "Carlos Precioso <npm@precioso.design>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-docs": "typedoc",
    "dev-docs": "nx watch --includeDependentProjects -p=. -- nx build-docs",
    "postinstall": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "nx": "21.3.11",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sh": "0.18.0",
    "typedoc": "^0.28.9",
    "typedoc-plugin-dt-links": "^2.0.13",
    "typedoc-plugin-mdn-links": "^5.0.7",
    "typescript": "~5.9.2"
  },
  "nx": {
    "implicitDependencies": [
      "*"
    ],
    "targets": {
      "build-docs": {
        "dependsOn": [
          "^build"
        ],
        "cache": true,
        "outputs": [
          "{projectRoot}/docs"
        ]
      },
      "dev-docs": {
        "dependsOn": [
          "build-docs"
        ],
        "cache": false,
        "continuous": true
      },
      "publish": {
        "dependsOn": [
          "build",
          "check"
        ],
        "cache": false
      }
    }
  }
}
