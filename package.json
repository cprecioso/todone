{
  "name": "@todone/repo",
  "version": "0.5.0",
  "type": "module",
  "author": "Carlos Precioso <npm@precioso.design>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-docs": "typedoc",
    "dev-docs": "nx watch --includeDependentProjects -p=. -- nx build-docs",
    "postinstall": "husky install",
    "publish:all": "yarn workspaces foreach --parallel --verbose --topological-dev --no-private npm publish --access public --tolerate-republish"
  },
  "devDependencies": {
    "execa": "^9.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nx": "21.1.2",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-pkg": "0.19.1",
    "prettier-plugin-sh": "0.17.4",
    "typedoc": "^0.28.4",
    "typedoc-plugin-dt-links": "^2.0.2",
    "typedoc-plugin-mdn-links": "^5.0.2",
    "typescript": "~5.8.3"
  },
  "nx": {
    "implicitDependencies": [
      "*"
    ],
    "targets": {
      "build": {},
      "check": {},
      "dev": {},
      "publish": {
        "dependsOn": [
          "build",
          "check"
        ]
      },
      "build-docs": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{projectRoot}/docs"
        ]
      }
    }
  }
}
