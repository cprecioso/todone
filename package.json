{
  "name": "@todone/repo",
  "version": "0.5.0",
  "type": "module",
  "author": "Carlos Precioso <npm@precioso.design>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*/*"
  ],
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "check:all": "turbo run check",
    "dev:all": "turbo run dev",
    "postinstall": "husky install",
    "publish:all": "turbo run prepack && yarn workspaces foreach --parallel --verbose --topological-dev --no-private npm publish --access public --tolerate-republish"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "execa": "^9.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-pkg": "0.19.1",
    "prettier-plugin-sh": "0.17.4",
    "turbo": "^2.5.3",
    "typescript": "~5.8.3"
  }
}
